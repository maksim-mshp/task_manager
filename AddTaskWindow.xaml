<Window x:Class="TaskManager.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="Добавить задачу" Height="145" Width="604" KeyDown="Window_KeyDown">
    <Grid>
        <TextBox x:Name="task_name" HorizontalAlignment="Left" Height="31" Margin="170,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="398" FontSize="16"/>
        <Label Content="Название задачи:" HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="ok_btn" Content="ОК" HorizontalAlignment="Left" Margin="303,62,0,0" VerticalAlignment="Top" Width="265" Click="ok_btn_Click" FontSize="16" Height="31"/>
        <Button x:Name="cancel_btn" Content="Отмена" HorizontalAlignment="Left" Margin="17,62,0,0" VerticalAlignment="Top" Width="265" Height="31" Click="cancel_btn_Click"/>

    </Grid>
</Window>
