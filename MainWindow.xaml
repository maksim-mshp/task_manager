<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="Менеджер задач" Height="450" Width="800">
    <Grid>
        <Label Content="Менеджер задач" HorizontalAlignment="Left" Margin="0,10,-0.4,0" VerticalAlignment="Top" Width="794" FontSize="18" HorizontalContentAlignment="Center"/>
        <ListBox x:Name="listbox" HorizontalAlignment="Left" Height="288" Margin="10,71,0,0" VerticalAlignment="Top" Width="772" BorderBrush="{x:Null}"/>
        <Button x:Name="add" Content="Добавить задачу" HorizontalAlignment="Left" Margin="23,374,0,0" VerticalAlignment="Top" Width="114" Click="add_Click"/>
        <Button x:Name="clear_btn" Content="Удалить все задачи" HorizontalAlignment="Left" Margin="150,374,0,0" VerticalAlignment="Top" Width="128" Click="clear_btn_Click"/>
        <Button x:Name="add_rand_btn" Content="add random" HorizontalAlignment="Left" Margin="308,374,0,0" VerticalAlignment="Top" Width="75" Click="add_rand_btn_Click"/>

    </Grid>
</Window>
